---
// Import the Navigation component for consistent header navigation
import Navigation from "../components/Navigation.astro";
import "../styles/global.css"; // Ensure global styles are included
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #1e1d23;
            color: #cdd6f4;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }
        header {
            position: absolute;
            top: 0;
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 2rem;
            box-sizing: border-box;
        }
        .header-name {
            font-size: 3rem;
            color: #cdd6f4;
        }
        .nav-buttons {
            display: flex;
            gap: 1rem;
        }
        .nav-button {
            background-color: #b4befe;
            color: #1e1d23;
            border: none;
            border-radius: 5px;
            padding: 0.5rem 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .nav-button:hover {
            background-color: #7d83ac;
        }
        .contact-info {
            text-align: center;
        }
        .contact-item {
            margin: 1rem 0;
        }
        .social-links {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }
        .social-link {
            color: #cdd6f4;
            text-decoration: none;
            transition: color 0.3s ease;
        }
        .social-link:hover {
            color: #eba0ac; /* Use an accent color for hover state */
        }
    </style>
</head>
<body>
    <header>
        <div class="header-name">Jack Derksen</div>
        <nav class="nav-buttons">
            <!-- Update these hrefs with your actual page links -->
            <a href="/" class="nav-button">Home</a>
            <a href="/about" class="nav-button">About</a>
            <a href="/projects" class="nav-button">Projects</a>
            <a href="/contact" class="nav-button">Contact</a>
        </nav>
    </header>

    <div class="contact-info">
        <h1>Contact</h1>
        <div class="contact-item">Email: jmderksen9@gmail.com</div>
        <div class="contact-item">Phone: (780) 245-5766</div>

        <div class="social-links">
            <!-- Replace href values with your actual social media links -->
            <a href="https://instagram.com/jmderksen_" class="social-link" target="_blank" rel="noopener noreferrer">Instagram</a>
            <a href="https://twitter.com/yourusername" class="social-link" target="_blank" rel="noopener noreferrer">Twitter</a>
            <a href="https://linkedin.com/in/yourusername" class="social-link" target="_blank" rel="noopener noreferrer">LinkedIn</a>
        </div>
    </div>
</body>
</html>

