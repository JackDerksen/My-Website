---
// Import the Navigation component for consistent header navigation
import Navigation from "../components/Navigation.astro";
import "../styles/global.css"; // Ensure global styles are included
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projects</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #1e1d23;
            color: #cdd6f4;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }
        header {
            position: absolute;
            top: 0;
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 2rem;
            box-sizing: border-box;
        }
        .header-name {
            font-size: 3rem;
            color: #cdd6f4;
        }
        .nav-buttons {
            display: flex;
            gap: 1rem;
        }
        .nav-button {
            background-color: #b4befe;
            color: #1e1d23;
            border: none;
            border-radius: 5px;
            padding: 0.5rem 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .nav-button:hover {
            background-color: #7d83ac;
        }
        .github-link {
            margin-top: 2rem;
            background-color: #b4befe;
            color: #1e1d23;
            border: none;
            padding: 0.75rem 1.5rem;
            text-decoration: none;
            font-size: 1.2rem;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }
        .github-link:hover {
            background-color: #89dceb;
        }
    </style>
</head>
<body>
    <header>
        <div class="header-name">Jack Derksen</div>
        <nav class="nav-buttons">
            <!-- Update these hrefs with your actual page links -->
            <a href="/" class="nav-button">Home</a>
            <a href="/about" class="nav-button">About</a>
            <a href="/projects" class="nav-button">Projects</a>
            <a href="/contact" class="nav-button">Contact</a>
        </nav>
    </header>

    <main>
        <h1>Projects</h1>
        <!-- Add individual project details here -->

        <!-- GitHub link button -->
        <a href="https://github.com/JackDerksen" class="github-link" target="_blank" rel="noopener noreferrer">View My GitHub</a>
    </main>
</body>
</html>

